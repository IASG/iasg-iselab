		<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

		<script>
var netid = false;
$('#netid-input').hide();
$('#login').click(function() {
	if (!netid) {
		$('#register').hide();
		$('#netid-input').show();
		$('#login').html('Go!');
		$('#login').addClass('btn-lg');
		netid = true;
	} else {
		document.location = '/term#' + $('#netid').val();
	}
});
$(document).keypress(function(e){
	if (e.which == 13){
		$("#login").click();
	}
});
		</script>

